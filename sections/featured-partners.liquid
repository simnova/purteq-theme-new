<div class="container mt-5" style="margin-bottom:10rem">
    <div class="text-center">
      <p style="color: #0069a7; letter-spacing: 0.09rem;font-size: calc(2rem + .9vw); font-weight: 100;">{{ section.settings.title | escape }}</p>
    </div>
    

    {%- if section.blocks.size > 0 -%}
        <div class="container">
            <div class="row">
            {%- for block in section.blocks -%}
                <div class="col-6 col-md-3">
                {%- if block.settings.image != blank -%}
                    {{ block.settings.image | img_url: '360x360', scale: 2 | img_tag: block.settings.image.alt, 'img-fluid' }}
                {%- else -%}
                    {{ 'logo' | placeholder_svg_tag: 'placeholder-svg, img-fluid' }}
                {%- endif -%}
                </div>
            {%- endfor -%}
            </div>
        </div>
    </ul>
    {%- endif -%}
</div>

{%schema%}
{
  "name": "Featured Partners",
  "max_blocks": 20,
  "settings": [
    {
        "type": "text",
        "id": "title",
        "label": "Heading"
    }
  ],
  "blocks": [
    {
      "name": "Partner",
      "type": "partner_detail",
      "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Partner"
          },
          {
              "type": "image_picker",
              "id": "image",
              "label": "Parter Logo"
          },
          {
              "type": "url",
              "id": "link",
              "label": "Link",
              "info": "Optional"
          }
      ]
    }
  ],
  "presets": [
    {
      "category": "Homepage Sections",
      "name":"Featured Partners",
      "blocks":[
        {"type":"partner_detail"},
        {"type":"partner_detail"},
        {"type":"partner_detail"}
      ]
    }
  ]
}
{%endschema%}