<div class="container mt-5" style="margin-bottom:10rem">
    <div class="text-center">
      <p style="color: #0069a7; letter-spacing: 0.09rem;font-size: calc(2rem + .9vw); font-weight: 100;">{{ section.settings.title | escape }}</p>
    </div>
    

    {%- if section.blocks.size > 0 -%}
        <div class="container">
            <div class="partner-swiper-container">
              <div class="swiper-wrapper">
              {%- for block in section.blocks -%}
                  <div class="swiper-slide">
                    <div>
                  {%- if block.settings.image != blank -%}
                      {{ block.settings.image | img_url: '360x360', scale: 2 | img_tag: block.settings.image.alt, 'img-fluid' }}
                  {%- else -%}
                      {{ 'logo' | placeholder_svg_tag: 'placeholder-svg, img-fluid' }}
                  {%- endif -%}
                    </div>
                  </div>
              {%- endfor -%}
              </div>
              <div class="partner-swiper-button-prev"></div>
              <div class="partner-swiper-button-next"></div>
            </div>
        </div>
    </ul>
    {%- endif -%}
</div>

{% stylesheet %}
.featured-partners .partner-swiper-container {
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
{% endstylesheet %}

{% javascript %}
  const swiper = new Swiper(
    '.partner-swiper-container', 
    {
      speed: 400,
      spaceBetween: 100,
      slidesPerView: 4,
      navigation: {
        nextEl: '.partner-swiper-container .partner-swiper-button-prev',
        prevEl: '.partner-swiper-container .partner-swiper-button-next',
      }
    }
  );
{% endjavascript %}}

{%schema%}
{
  "name": "Featured Partners",
  "class": "featured-partners",
  "max_blocks": 20,
  "settings": [
    {
        "type": "text",
        "id": "title",
        "label": "Heading"
    }
  ],
  "blocks": [
    {
      "name": "Partner",
      "type": "partner_detail",
      "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Partner"
          },
          {
              "type": "image_picker",
              "id": "image",
              "label": "Parter Logo"
          },
          {
              "type": "url",
              "id": "link",
              "label": "Link",
              "info": "Optional"
          }
      ]
    }
  ],
  "presets": [
    {
      "category": "Homepage Sections",
      "name":"Featured Partners",
      "blocks":[
        {"type":"partner_detail"},
        {"type":"partner_detail"},
        {"type":"partner_detail"}
      ]
    }
  ]
}
{%endschema%}