{% paginate blog.articles by 5 %}


<section class="page-header">
  <div class="container mb-5">
    <div class="text-center" style="padding-top: 5vw;">
      <p class="page-heading" style="color: #0069a7;">{{ blog.title | escape }}</p>
    </div>
  </div>
<section>  

<div class="container">







<a href="/blogs/articles/">View All</a> |

{% for tag in blog.all_tags %}
  {{ tag | link_to_tag: tag }} ({{ tag.total_count }}) |
{% endfor %}



{% for article in blog.articles %}
 <div class="row">
  <div class="col-md-12">
      <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
          <strong class="d-inline-block mb-2 text-success">
          {% for tag in article.tags %}
          {{ tag}}|
        {% endfor %}

          </strong>
          <h3 class="mb-0"><a href="{{ article.url }}">{{ article.title }}</a></h3>
          <div class="mb-1 text-muted">{{ article.author }} @ {{ article.created_at }}</div>
          <p class="mb-auto">
            {% if article.excerpt.size > 0 %}
              {{ article.excerpt }}
            {% else %}
              <p>{{ article.content | strip_html | truncatewords: 50 }}</p>
            {% endif %}
          
          </p>
          <a href="#" class="stretched-link">Continue reading</a>
        </div>
        <div class="col-auto d-none d-lg-block">
            {%- if article.image != blank -%}
          <img 
            src="{{ article.image | img_url: '1070x' }}"
            alt="{{ article.image.alt | escape }}"
            class="img-fluid" style="min-width:100%;"
          >
        {%- else -%}
    no image
    {% endif %}
        </div>
      </div>
    </div>
  </div>

{% endfor %}

{% if paginate.pages > 1 %}
  {{ paginate | default_pagination }}
{% endif %}

{% endpaginate %}

</div>