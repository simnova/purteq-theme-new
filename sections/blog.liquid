{% paginate blog.articles by 5 %}

<h1>{{ blog.title }}</h1>


<a href="/blogs/articles/tagged/articles">Articles</a><br/>
<a href="/blogs/articles/tagged/white-paper">White Papers</a><br/>
<a href="/blogs/articles/tagged/press-releases">Press Releases</a><br/>
<a href="/blogs/articles/tagged/videos">Videos</a><br/>


{% for article in blog.articles %}
  <div>
    <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>
    {{ article.author }} @ {{ article.created_at }}
    <div>
      {% if article.excerpt.size > 0 %}
        {{ article.excerpt }}
      {% else %}
        <p>{{ article.content | strip_html | truncatewords: 100 }}</p>
      {% endif %}
    </div>
  </div>
{% endfor %}

{% if paginate.pages > 1 %}
  {{ paginate | default_pagination }}
{% endif %}

{% endpaginate %}
