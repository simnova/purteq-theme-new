<div class="container">
    <div class="image-block text-center" style="margin-bottom: 5rem;">
      <p style="color: #ffffff; letter-spacing: 0.07rem;font-size: calc(1.5rem + .9vw); font-weight: 500;">{{ section.settings.title | escape }}</p>
    </div>
</div>

{% stylesheet %}


{% endstylesheet %}
{% style %}

.header-image .image-block  {


  {%- if section.settings.image != blank -%}
  background-image: url({{section.settings.image | img_url: '2048x'}});
{%- else -%}
background-image: url({{'image' | img_url}});
{%- endif -%}

  min-height: 47vw; 
  padding-top: 5vw;
  background-size: contain;
  background-repeat: no-repeat;
}


{% endstyle %}

{% schema %}
{
  "name": "Image",
  "class":"header-image",
  "settings": [
    {
      "type": "html",
      "id": "title",
      "label": "Header Overlay"
    },
    { 
      "type": "image_picker",
      "id":"image",
      "label": "Header Image"
    }
  
  ],
  "presets": [
    {
      "category": "Something",
      "name":"Header Image"
    }
  ]
}
{% endschema %}