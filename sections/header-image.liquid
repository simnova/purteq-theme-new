<div class="container mb-5">
    <div class="image-block text-center">
      <p class="page-heading" style="color: #ffffff;">{{ section.settings.title }}</p>
    </div>
</div>

{% stylesheet %}


{% endstylesheet %}
{% style %}

.header-image .image-block  {


  {%- if section.settings.image != blank -%}
  background-image: url({{section.settings.image | img_url: '2048x'}});
{%- else -%}
background-image: url({{'image' | img_url}});
{%- endif -%}

  min-height: calc(0.8 * 47vw);
  padding-top: 5vw;
  background-size: cover;
  background-repeat: no-repeat;
  margin: 0 12px;
}
.header-image sup {
  font-size: calc(.8rem + .9vw);
  font-weight: 500;
  margin-left: calc(-.1vh*2);
  vertical-align: text-top;
  position: initial;
  line-height: calc(1.5rem + .9vw);}

{% endstyle %}

{% schema %}
{
  "name": "Image",
  "class":"header-image",
  "settings": [
    {
      "type": "html",
      "id": "title",
      "label": "Header Overlay"
    },
    { 
      "type": "image_picker",
      "id":"image",
      "label": "Header Image"
    }
  
  ],
  "presets": [
    {
      "category": "Something",
      "name":"Header Image"
    }
  ]
}
{% endschema %}